{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "baseUrl": ".",                       
    "paths": {
      "~/*": ["./src/*"]
    },                           
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                       
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  

    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
